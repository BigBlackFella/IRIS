<Metadata ModelName="HateoasSimple" Version="1.0" 
          xmlns="http://iris.temenos.com/metadata.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://iris.temenos.com metadata.xsd">
    <Entity Name="HOME"></Entity>
    <Entity Name="ID"></Entity>
	<Entity Name="Profile">
		<Property Name="userID">
			<Term Name="TERM_MANDATORY">true</Term>
			<Term Name="TERM_ID_FIELD">true</Term>
		</Property>
		<Property Name="name">
			<Term Name="TERM_MANDATORY">true</Term>
		</Property>
		<Property Name="DOB">
			<Term Name="TERM_MANDATORY">true</Term>
			<Term Name="TERM_VALUE_TYPE">TIMESTAMP</Term>
		</Property>
		<Property Name="location" />
		<Property Name="pictureTaken">
			<Term Name="TERM_VALUE_TYPE">TIMESTAMP</Term>
		</Property>
	</Entity>
	<Entity Name="Preferences">
		<Property Name="userID">
			<Term Name="TERM_MANDATORY">true</Term>
			<Term Name="TERM_ID_FIELD">true</Term>
		</Property>
		<Property Name="currency">
			<Term Name="TERM_MANDATORY">true</Term>
		</Property>
		<Property Name="language" />
	</Entity>
	<Entity Name="Note">
		<Property Name="noteID">
			<Term Name="TERM_MANDATORY">true</Term>
			<Term Name="TERM_VALUE_TYPE">INTEGER_NUMBER</Term>
			<Term Name="TERM_ID_FIELD">true</Term>
		</Property>
		<Property Name="body" >
			<Term Name="TERM_MANDATORY">true</Term>
		</Property>
	</Entity>
</Metadata>
