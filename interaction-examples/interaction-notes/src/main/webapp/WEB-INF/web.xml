<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.4"
	xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
	<display-name>Interaction State Transition study</display-name>
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			classpath:META-INF/server/wink-core-context.xml
			classpath:META-INF/spring-beans.xml
		</param-value>
	</context-param>
	
    <filter>
        <filter-name>request-context</filter-name>
        <description>This filter sets the request context for the interaction framework.</description>
        <filter-class>com.temenos.interaction.core.web.RequestContextFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>request-context</filter-name>
        <servlet-name>IRIS</servlet-name>
    </filter-mapping>
	
<!-- 
  DOESN'T WORK.  "Cannot initialize context because there is already a root application context present - check whether you have multiple ContextLoader* definitions in your web.xml!"
 	<listener>
		<listener-class>
			org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>
 -->
 	
	<servlet>
		<servlet-name>context</servlet-name>
		<servlet-class>org.springframework.web.context.ContextLoaderServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>IRIS</servlet-name>
		<servlet-class>org.apache.wink.server.internal.servlet.RestServlet</servlet-class>
<!-- 
		<init-param>
			<param-name>javax.ws.rs.Application</param-name>
			<param-value>com.temenos.interaction.example.app.ExampleApplication</param-value>
		</init-param>
-->
  		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>restSdkAdmin</servlet-name>
		<servlet-class>org.apache.wink.server.internal.servlet.AdminServlet</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>restSdkAdmin</servlet-name>
		<url-pattern>/admin</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>IRIS</servlet-name>
		<url-pattern>/rest/*</url-pattern>
	</servlet-mapping>
 </web-app>
