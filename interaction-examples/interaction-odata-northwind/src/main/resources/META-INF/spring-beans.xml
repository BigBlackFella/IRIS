<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Initialise JPA for MockResponder -->
	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalEntityManagerFactoryBean">
			<property name="persistenceUnitName" value="ResponderServiceHibernate" />		
	</bean>
	
	<!-- Initialise responder database -->
	<bean factory-method="fillDatabase" class="com.temenos.interaction.sdk.util.ResponderDBUtils" />

	<!-- Metadata -->	
	<bean id="metadataManager" class="com.temenos.interaction.core.resource.ResourceMetadataManager" />
	<bean id="edmDataServices" factory-bean="metadataManager" factory-method="getMetadata"/>
	
	<!-- Producers -->
	<bean id="mockProducer" class="org.odata4j.producer.jpa.JPAProducer">
		<constructor-arg name="emf" ref="entityManagerFactory" />
		<constructor-arg name="namespace" value="MockResponderSDK" />		
		<constructor-arg name="maxResults" value="100" />				
	</bean>
	
<!--
	<bean id="functionsProducer" class="com.temenos.interaction.example.note.NewFunctionProducer">
		<constructor-arg name="emf" ref="entityManagerFactory" />		
		<constructor-arg name="odataNamespace" value="MockResponderSDK" />
		<constructor-arg name="jpaProducer" ref="producer" />				
	</bean>
-->
	
    <!--
	  An extension of org.apache.wink.spring.Registrar with support for singletons.
    -->
	<bean class="com.temenos.interaction.winkext.RegistrarWithSingletons">
		<property name="singletons">
        	<set>
				<ref local="serviceDocumentProvider" />
				<ref local="edmxProvider" />
				<ref local="staxHALProvider" />
				<ref local="atomProvider" />
 			</set>
   		</property>
   		<property name="classes">
			<set value-type="java.lang.Class">
<!--  
				<value>com.temenos.interaction.example.sandbox.SandboxRIM</value>
				<value>com.temenos.interaction.example.note.NoteRIM</value>
				<value>com.temenos.interaction.example.note.NewNoteRIM</value>
-->
			</set>
		</property>
		<property name="resourceRegistry" ref="resourceRegistry" />
	</bean>

	<bean id="staxHALProvider" class="com.temenos.interaction.core.media.hal.stax.HALProvider">
    	<constructor-arg name="edmDataServices" ref="edmDataServices" />
	</bean>
	<bean id="atomProvider" class="com.temenos.interaction.core.media.atom.AtomXMLProvider">
    	<constructor-arg name="edmDataServices" ref="edmDataServices" />
	</bean>
	<bean id="edmxProvider" class="com.temenos.interaction.core.media.edmx.EdmxMetaDataProvider" />
	<bean id="serviceDocumentProvider" class="com.temenos.interaction.core.media.atomsvc.ServiceDocumentProvider" />

    <bean id="resourceRegistry" class="com.temenos.interaction.core.link.ResourceRegistry">
    	<constructor-arg name="resource">
    	    <set>
                <ref bean="ServiceDocument" />
                <ref bean="Metadata" />
                <ref bean="Supplier" />
                <ref bean="Suppliers" />
                <ref bean="Order_Detail" />
                <ref bean="Order_Details" />
                <ref bean="Category" />
                <ref bean="Categories" />
                <ref bean="Customer" />
                <ref bean="Customers" />
                <ref bean="Product" />
                <ref bean="Products" />
                <ref bean="Employee" />
                <ref bean="Employees" />
                <ref bean="Order" />
                <ref bean="Orders" />
            </set>
        </constructor-arg>
    </bean>

    <!-- Resources -->
    <bean id="ServiceDocument" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="ServiceDocument" />
    	<constructor-arg name="path" value="/" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>

    <bean id="Metadata" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Metadata" />
    	<constructor-arg name="path" value="/$metadata" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>

    <bean id="Supplier" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Suppliers" />
    	<constructor-arg name="path" value="/Suppliers/{id}" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>
    <bean id="Suppliers" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Suppliers" />
    	<constructor-arg name="path" value="/Suppliers" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>

    <bean id="Order_Detail" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Order_Details" />
    	<constructor-arg name="path" value="/Order_Details/{id}" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>
    <bean id="Order_Details" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Order_Details" />
    	<constructor-arg name="path" value="/Order_Details" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>

    <bean id="Category" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Categories" />
    	<constructor-arg name="path" value="/Categories/{id}" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>
    <bean id="Categories" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Categories" />
    	<constructor-arg name="path" value="/Categories" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>
    
    <bean id="Customer" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Customers" />
    	<constructor-arg name="path" value="/Customers/{id}" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>
    <bean id="Customers" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Customers" />
    	<constructor-arg name="path" value="/Customers" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>

    <bean id="Product" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Products" />
    	<constructor-arg name="path" value="/Products/{id}" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>
    <bean id="Products" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Products" />
    	<constructor-arg name="path" value="/Products" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>

    <bean id="Employee" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Employees" />
    	<constructor-arg name="path" value="/Employees/{id}" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>
    <bean id="Employees" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Employees" />
    	<constructor-arg name="path" value="/Employees" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>

    <bean id="Order" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Orders" />
    	<constructor-arg name="path" value="/Orders/{id}" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>
    <bean id="Orders" class="com.temenos.interaction.core.dynaresource.HTTPDynaRIM">
    	<constructor-arg name="entityName" value="Orders" />
    	<constructor-arg name="path" value="/Orders" />
    	<constructor-arg name="commandController" ref="commands" />
    </bean>
    
    <!-- Commands -->
    <bean id="commands" class="com.temenos.interaction.core.command.CommandController">
    	<constructor-arg name="commands">
            <map>
                <entry>
                    <key><value>GET+/</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETMetadataCommand">
                        <constructor-arg name="entity" value="ServiceDocument" />
                        <constructor-arg name="resourceMetadata" ref="edmDataServices" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/$metadata</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETMetadataCommand">
                        <constructor-arg name="entity" value="Metadata" />
                        <constructor-arg name="resourceMetadata" ref="edmDataServices" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Suppliers/{id}</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntityCommand">
                        <constructor-arg name="entity" value="Suppliers" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Suppliers</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntitiesCommand">
                        <constructor-arg name="entity" value="Suppliers" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Order_Details/{id}</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntityCommand">
                        <constructor-arg name="entity" value="Order_Details" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Order_Details</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntitiesCommand">
                        <constructor-arg name="entity" value="Order_Details" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Categories/{id}</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntityCommand">
                        <constructor-arg name="entity" value="Categories" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Categories</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntitiesCommand">
                        <constructor-arg name="entity" value="Categories" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Customers/{id}</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntityCommand">
                        <constructor-arg name="entity" value="Customers" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Customers</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntitiesCommand">
                        <constructor-arg name="entity" value="Customers" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Products/{id}</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntityCommand">
                        <constructor-arg name="entity" value="Products" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Products</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntitiesCommand">
                        <constructor-arg name="entity" value="Products" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Employees/{id}</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntityCommand">
                        <constructor-arg name="entity" value="Employees" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Employees</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntitiesCommand">
                        <constructor-arg name="entity" value="Employees" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Orders/{id}</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntityCommand">
                        <constructor-arg name="entity" value="Employees" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
                <entry>
                    <key><value>GET+/Orders</value></key>
                    <bean class="com.temenos.interaction.commands.odata.GETEntitiesCommand">
                        <constructor-arg name="entity" value="Employees" />
                        <constructor-arg name="producer" ref="mockProducer" />
                    </bean>
                </entry>
            </map>
        </constructor-arg>
    </bean>

</beans>
