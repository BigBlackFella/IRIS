<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence     http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">

	<!-- Generated JPA configuration for IRIS MockResponder -->
	<persistence-unit name="ResponderServiceHibernate" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.interaction.example.odata.airline.model.Airport</class>
		<class>com.interaction.example.odata.airline.model.FlightSchedule</class>
		<class>com.interaction.example.odata.airline.model.Flight</class>
		<class>com.interaction.example.odata.airline.model.Passenger</class>
		<exclude-unlisted-classes>true</exclude-unlisted-classes>
	</persistence-unit>

</persistence>
