<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<!-- Initialise JPA for MockResponder -->
	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalEntityManagerFactoryBean">
			<property name="persistenceUnitName" value="NoteServiceHibernate" />		
	</bean>
	<!-- Create the MockResponder factory, at the moment this also initialises the Mock database -->
	<bean id="mockResponderFactory" class="com.temenos.interaction.example.note.NoteProducerFactory" />
	<!-- MockResponder Producer -->
	<bean id="producer" factory-bean="mockResponderFactory" factory-method="getJPAProducer"/>
	<bean id="edmDataServices" factory-bean="producer" factory-method="getMetadata"/>
	<bean id="functionsProducer" factory-bean="mockResponderFactory" factory-method="getFunctionsProducer"/>

<!--
	An extension of org.apache.wink.spring.Registrar with support for singletons.
-->
	<bean class="com.temenos.interaction.winkext.RegistrarWithSingletons">
		<property name="singletons">
        	<set>
        		<ref local="jaxbContextResolver" />
				<ref local="staxHALProvider" />
 			</set>
   		</property>
   		<property name="classes">
			<set value-type="java.lang.Class">
				<value>com.temenos.interaction.example.sandbox.SandboxRIM</value>
<!--  
				<value>com.temenos.interaction.example.note.NoteRIM</value>
				<value>com.temenos.interaction.example.note.NewNoteRIM</value>
-->
			</set>
		</property>
		<property name="instances">
			<set>
<!-- 
				<ref bean="OEntity-NOTE" />
 -->
				<ref bean="JAXB-NOTE" />
				<ref bean="NEW_NOTE" />
				<ref bean="COUNTRY" />

				<ref bean="DYNA_NOTE" />
			</set>
		</property>
<!--  
		<property name="instances">
			<set>
				<ref bean="DYNA_NOTE" />
				<ref bean="DYNA_NEW_NOTE" />
			</set>
		</property>
-->
	</bean>

	<bean id="jaxbContextResolver" class="com.temenos.interaction.example.app.JAXBContextResolver" />
	<bean id="staxHALProvider" class="com.temenos.interaction.core.media.hal.stax.HALProvider">
    	<constructor-arg name="edmDataServices" ref="edmDataServices" />
	</bean>

    <bean id="DYNA_NOTE" class="com.temenos.interaction.core.dynaresource.DynaCRUDRIM">
    	<constructor-arg name="entityName" value="NOTE" />
    	<constructor-arg name="path" value="/notes/{id}" />
    	<constructor-arg name="commandController" ref="noteCommands" />
    </bean>
    
    <bean id="noteCommands" class="com.temenos.interaction.core.command.CommandController">
    	<constructor-arg name="resourcePath" value="/notes/{id}" />
    	<constructor-arg name="getCommand">
    		<bean class="com.temenos.interaction.example.note.OEntityGetNoteCommand">
    			<constructor-arg name="producer" ref="producer" />
    		</bean>
   		</constructor-arg>
    	<constructor-arg name="stateTransitionCommands">
    		<set>
	    		<bean class="com.temenos.interaction.example.note.OEntityPutNoteCommand">
    				<constructor-arg name="method" value="PUT" />
    				<constructor-arg name="path" value="/notes/{id}" />
    				<constructor-arg name="producer" ref="producer" />
    			</bean>
	    		<bean class="com.temenos.interaction.example.note.DeleteNoteCommand">
    				<constructor-arg name="method" value="DELETE" />
    				<constructor-arg name="path" value="/notes/{id}" />
    				<constructor-arg name="producer" ref="producer" />
    			</bean>
   			</set>
   		</constructor-arg>
    </bean>

    <!-- 
    <bean id="DYNA_NEW_NOTE" class="com.temenos.interaction.core.dynaresource.DynaTRANSIENTRIM">
    	<constructor-arg name="path" value="/nnnnnotes/new" />
    	<property name="producer" ref="functionsProducer" />
    </bean>
	-->
    
    <bean id="OEntity-NOTE" class="com.temenos.interaction.example.note.OEntityNoteRIM">
    	<constructor-arg name="producer" ref="producer" />
    </bean>
    <bean id="JAXB-NOTE" class="com.temenos.interaction.example.note.JAXBNoteRIM">
    	<constructor-arg name="producer" ref="producer" />
    </bean>
    <bean id="NEW_NOTE" class="com.temenos.interaction.example.note.NewNoteRIM">
    	<constructor-arg name="producer" ref="functionsProducer" />
    </bean>
    <bean id="COUNTRY" class="com.temenos.interaction.example.country.CountryRIM">
    	<constructor-arg name="producer" ref="producer" />
    </bean>

</beans>