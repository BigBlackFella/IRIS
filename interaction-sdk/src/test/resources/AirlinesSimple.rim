events
	GET GET
end

commands
	GETServiceDocument
	GETEntities
	GETEntity
	GETNavPropertydepartureAirport entity=FlightSchedule, navproperty=navdepartureAirport
	GETNavPropertyarrivalAirport entity=FlightSchedule, navproperty=navarrivalAirport
end

initial resource ServiceDocument
	item ServiceDocument
	view { GETServiceDocument }
	path "/"
	GET -> Flights
	GET -> Airports
	GET -> FlightSchedules
end


resource Flights
	collection Flight
	view { GETEntities }
	path "/Flights()"
	GET *-> flight id=flightID
end


resource flight
	item Flight
	view { GETEntity }
	path "/Flights({id})"
end



resource Airports
	collection Airport
	view { GETEntities }
	path "/Airports()"
	GET *-> airport id=code
end


resource airport
	item Airport
	view { GETEntity }
	path "/Airports('{id}')"
end



resource FlightSchedules
	collection FlightSchedule
	view { GETEntities }
	path "/FlightSchedules()"
	GET *-> flightschedule id=flightScheduleID
	GET *-> departureAirport_nav id=flightScheduleID, navdepartureAirport="departureAirport"
	GET *-> arrivalAirport_nav id=flightScheduleID, navarrivalAirport="arrivalAirport"
end


resource flightschedule
	item FlightSchedule
	view { GETEntity }
	path "/FlightSchedules({id})"
	GET -> departureAirport_nav id=flightScheduleID, navdepartureAirport="departureAirport"
	GET -> arrivalAirport_nav id=flightScheduleID, navarrivalAirport="arrivalAirport"
end



resource departureAirport_nav
	item Airport
	view { GETNavPropertydepartureAirport }
	path "/FlightSchedules({id})/{navdepartureAirport}"
	GET -> airport id=code
end

resource arrivalAirport_nav
	item Airport
	view { GETNavPropertyarrivalAirport }
	path "/FlightSchedules({id})/{navarrivalAirport}"
	GET -> airport id=code
end
