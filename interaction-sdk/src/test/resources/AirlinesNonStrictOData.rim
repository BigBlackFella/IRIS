rim FlightResponder {

events
	DELETE DELETE
	GET GET
	POST POST
	PUT PUT
end

commands
	CreateEntity
	DeleteEntity
	GETEntities
	GETEntity
	GETNavProperty
	GETServiceDocument
	UpdateEntity
end

initial resource ServiceDocument
	item ServiceDocument
	view { GETServiceDocument }
	path "/"
	GET -> Flights
	GET -> Airports
	GET -> FlightSchedules
	GET -> Passengers
end

resource Flights
	collection Flight
	view { GETEntities filter=filter }
	path "/Flights()"
	POST -> Flights_created
	GET *-> flight id=flightID
	GET title="flightschedule" *-> flightschedule id=flightScheduleNum
end

resource flight
	item Flight
	view { GETEntity }
	path "/Flights({id})"
	GET title="flightschedule" -> flightschedule id=flightScheduleNum
end

resource Flights_created
	item Flight
	actions { CreateEntity }
	path "/Flights()"
end

resource Airports
	collection Airport
	view { GETEntities filter=filter }
	path "/Airports()"
	POST -> Airports_created
	GET *-> airport id=code
	GET title="departures" *-> FlightSchedules filter="departureAirportCode eq '{code}'"
	GET title="arrivals" *-> FlightSchedules filter="arrivalAirportCode eq '{code}'"
end

resource airport
	item Airport
	view { GETEntity }
	path "/Airports('{id}')"
	GET title="departures" -> FlightSchedules filter="departureAirportCode eq '{code}'"
	GET title="arrivals" -> FlightSchedules filter="arrivalAirportCode eq '{code}'"
end

resource Airports_created
	item Airport
	actions { CreateEntity }
	path "/Airports()"
end

resource FlightSchedules
	collection FlightSchedule
	view { GETEntities filter=filter }
	path "/FlightSchedules()"
	POST -> FlightSchedules_created
	GET *-> flightschedule id=flightScheduleID
	GET title="departureAirport" *-> airport id=departureAirportCode
	GET title="arrivalAirport" *-> airport id=arrivalAirportCode
end

resource flightschedule
	item FlightSchedule
	view { GETEntity }
	path "/FlightSchedules({id})"
	GET title="departureAirport" -> airport id=departureAirportCode
	GET title="arrivalAirport" -> airport id=arrivalAirportCode
end

resource FlightSchedules_created
	item FlightSchedule
	actions { CreateEntity }
	path "/FlightSchedules()"
end

resource Passengers
	collection Passenger
	view { GETEntities filter=filter }
	path "/Passengers()"
	POST -> Passengers_created
	GET *-> passenger id=passengerNo
	GET title="flight" *-> flight id=flightID
end

resource passenger
	item Passenger
	view { GETEntity }
	path "/Passengers({id})"
	GET title="flight" -> flight id=flightID
end

resource Passengers_created
	item Passenger
	actions { CreateEntity }
	path "/Passengers()"
end
}